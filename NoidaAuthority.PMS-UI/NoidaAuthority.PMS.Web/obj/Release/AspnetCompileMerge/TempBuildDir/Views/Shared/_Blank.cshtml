                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <footer>
                    Copyright © 2016 <b>NOIDA</b>. @*Developed and Maintained by <a href="http://www.svam.com">North Shore Technologies*@</a>
