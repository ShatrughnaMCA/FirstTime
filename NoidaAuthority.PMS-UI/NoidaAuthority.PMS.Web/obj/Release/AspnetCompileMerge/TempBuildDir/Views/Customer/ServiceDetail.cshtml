                                      .ServerFiltering(true)
                                      .Type("aspnetmvc-ajax")
                                      .Transport(transport =>
                                      {
                                          transport.Read("GetAllServiceRequestId", "Customer");
                                      })
                                      .Schema(schema =>
                                      {
