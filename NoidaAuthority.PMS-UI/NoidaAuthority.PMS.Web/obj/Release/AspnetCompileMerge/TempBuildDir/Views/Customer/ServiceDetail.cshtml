@model NoidaAuthority.PMS.Entity.CitizenServiceRequest
@using Kendo.Mvc.UI;
@using Kendo.Mvc.Extensions;
@{
    ViewBag.Title = "Service Detail";
    //Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    Layout = "~/Views/Shared/_Blank.cshtml";
}

<style>
    body{
        background-color: #00a182;
    }
    .cust-panel{
        background-color: #fff;
        border-radius:6px;
        padding-bottom:15px;
        box-shadow:2px 2px 8px #000; 
    }
    h1{
        display:none;
    }
    #divCustomerRequest{
        width:80%;
        margin-left:10%;
        border-radius:3px;
    }
    .col-md-4{
        margin-top:0px;
    }
    .form-control{
        border-radius:0;
    }
    .k-button{
        padding:5px 12px;
    }
