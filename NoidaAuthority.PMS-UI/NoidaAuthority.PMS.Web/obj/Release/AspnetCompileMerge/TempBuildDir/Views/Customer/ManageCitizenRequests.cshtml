            columns.Bound(c => c.RId).Title("Registration Id").Width(40);//.ClientTemplate("<a href='" + "/Property/PropertyRegistration/ViewGPA/" + "?RId=#= RId #&Type=#=GPAType#'" + ">#=RId#</a>");
