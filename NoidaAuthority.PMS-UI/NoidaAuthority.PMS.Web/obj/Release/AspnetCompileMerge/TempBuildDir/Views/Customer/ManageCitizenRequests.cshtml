        .Filterable()
                .Resizable(resize => resize.Columns(true))
        .Pageable(pageable => pageable
                                               .Enabled(true)
                                               .Refresh(true)
                                               .PageSizes(true)
                                            ).AutoBind(true)
        .DataSource(dataSource => dataSource
        .Ajax()
        .Model(model => model.Id(c => c.RId))
        .ServerOperation(false)
        .Read(read => read.Action("GetCitizenRequests", "Customer"))
        .PageSize(20)
        )
