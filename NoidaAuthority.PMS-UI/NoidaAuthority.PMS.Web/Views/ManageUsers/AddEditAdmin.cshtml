    function VerifyEmail() {
        var result = false;

        var isEmail = $('#Email').val();


        $.ajax({
            async: false,
            crossDomain: true,
            url: '@Url.Action("VerifyEmail", "ManageUsers")',
            data: { email: isEmail },
            contentType: 'application/json',
            type: 'GET',
            success: function (response) {
                if (response) {
                    toastr.error('Email is duplicate!');
                    result = false;
                } else {
                    result = true;
                }

            },

        });

        return result;
    }

</script>

